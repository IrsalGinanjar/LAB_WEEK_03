<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <!-- List Fragment -->
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.lab_week_03.ListFragment"
        android:label="@string/coffee_list"
        tools:layout="@layout/fragment_list">

        <!-- Action ke Detail Fragment -->
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <!-- Detail Fragment -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.lab_week_03.DetailFragment"
        android:label="@string/coffee_detail"
        tools:layout="@layout/fragment_detail">

        <!-- Argument biar bisa pakai Safe Args -->
        <argument
            android:name="coffeeId"
            app:argType="string" />
    </fragment>
</navigation>
